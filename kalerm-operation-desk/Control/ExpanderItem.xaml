<UserControl x:Class="kalerm_operation_desk.Control.ExpanderItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:kalerm_operation_desk.Control"
             mc:Ignorable="d" Height="30" Width="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50" />
            <ColumnDefinition Width="170*" />
        </Grid.ColumnDefinitions>
        <Image Name="bgImage" Grid.ColumnSpan="2"></Image>
        <Image Grid.Column="0" Name="headerImage" Height="16" Width="16" Stretch="Fill" VerticalAlignment="Center" HorizontalAlignment="Right" />
        <TextBlock Name="headerTextBlock" Height="25" HorizontalAlignment="Center"  Text="TextBlock" Grid.ColumnSpan="2" Margin="6,6,0,5" />
    </Grid>
</UserControl>
