<Window x:Class="kalerm_operation_desk.Control.MessageWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:kalerm_operation_desk.Control"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="提示" Height="218" Width="328" WindowStyle="None" KeyDown="BaseWindow_KeyDown">

    <Grid Name="gridMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="84" />
            <ColumnDefinition Width="212*" />
            <ColumnDefinition Name="gcRight" Width="10" />
        </Grid.ColumnDefinitions>
        <Image Margin="8,30,0,0" Name="image" Stretch="Fill" Width="64" Height="64" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Grid Grid.Row="1" Margin="0,40,0,7" Grid.ColumnSpan="3" Height="24" HorizontalAlignment="Center" Width="244" Name="buttonPanel">
        </Grid>
        <TextBlock Grid.Column="1" Margin="9,40,0,0" Name="txtMessage" Text="" TextWrapping="Wrap" FontSize="13" HorizontalAlignment="Left"  VerticalAlignment="Top" />
    </Grid>
</Window>
